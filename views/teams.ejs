<!DOCTYPE html>
<html>
  <head>
    <title>Teams</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Sports League using NodeJS</h1>
    <div>
      <h2><a href="/">Home</a></h2>
      <h2><a href="/teams">Teams</a></h2>
      <h2><a href="/match">Add a match</a></h2>
      <h2><a href="/new">Add a new team</a></h2>
    </div>
    <div>
      <table>
        <tr>
          <th>Team</th>
          <th>Players</th>
          <th>Wins</th>
          <th>Losses</th>
        </tr>
        <% teams.forEach(team => { %>
        <tr>
          <td><a href="/update/:<%= team._id %>"><%= team.name %></a></td>
          <td><%= team.players %></td>
          <td><%= team.wins %></td>
          <td><%= team.losses %></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
